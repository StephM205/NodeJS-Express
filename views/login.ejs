<%- include('layout/header') %>

    <main
      style="
        background-image: url('https://images6.alphacoders.com/130/1302546.jpg');
      "
    >
      <div style="margin-left: 15rem" class="login_register">
        <div class="container-login">
          <div class="forms-container">
            <div class="signin-signup">
              <form
                action="login"
                class="sign-in-form"
                method="post"
              >
                <h2 class="title">Đăng Nhập</h2>
                <div class="input-field">
                  <i class="fas fa-user"></i>
                  <input type="text" name="email" placeholder="Email" />
                  <% if(errors != null && errors.email != null) { %>
                    <b><%= errors.email %></b><br>
                    <% } %>
                </div>
                <div class="input-field">
                  <i class="fas fa-lock"></i>
                  <input
                    type="password"
                    name="password"
                    placeholder="Mật Khẩu"
                  />
                  <% if(errors != null && errors.password != null) { %>
                    <b><%= errors.password %></b><br>
                  <% } %>
                </div>
                <a style="text-decoration: none; color: rgb(175, 139, 89); margin-left: 13rem; font-size: 14px;" href="/forget-password">Quên mật khẩu?</a>
                <input
                  type="submit"
                  name="dangnhap"
                  value="Đăng Nhập"
                  class="btn solid"
                />
                <p class="social-text">
                  Hoặc Đăng Nhập Với Các Nền Tảng Xã Hội
                </p>
                <div class="social-media">
                  <a href="#" class="social-icon">
                    <i class="fab fa-facebook-f"></i>
                  </a>
                  <a href="#" class="social-icon">
                    <i class="fab fa-twitter"></i>
                  </a>
                  <a href="#" class="social-icon">
                    <i class="fab fa-google"></i>
                  </a>
                  <a href="#" class="social-icon">
                    <i class="fab fa-linkedin-in"></i>
                  </a>
                </div>
              </form>
              <form
                action="register"
                class="sign-up-form"
                method="post"
              >
                <h2 class="title">Đăng Ký</h2>
                <div class="input-field">
                  <i class="fas fa-user"></i>
                  <input type="text" name="username" placeholder="Họ và tên" />
                  <% if(errors != null && errors.username != null) { %>
                    <b><%= errors.username %></b><br>
                  <% } %>
                </div>
                <div class="input-field">
                  <i class="fas fa-envelope"></i>
                  <input type="text" name="email" placeholder="Email" />
                  <% if(errors != null && errors.email != null) { %>
                    <b><%= errors.email %></b><br>
                  <% } %>
                </div>
                <div class="input-field">
                  <i class="fas fa-lock"></i>
                  <input
                    type="password"
                    name="password"
                    placeholder="Mật Khẩu"
                  />
                  <% if(errors != null && errors.password != null) { %>
                    <b><%= errors.password %></b><br>
                  <% } %>
                </div>
                <div class="input-field">
                  <i class="fas fa-lock"></i>
                  <input type="text" name="phone" placeholder="Số Điện Thoại" />
                  <% if(errors != null && errors.phone != null) { %>
                    <b><%= errors.phone %></b><br>
                  <% } %>
                  
                </div>
                <div class="input-field">
                  <i class="fas fa-lock"></i>
                  <input type="text" name="address" placeholder="Địa Chỉ" />
                  <% if(errors != null && errors.address != null) { %>
                    <b><%= errors.address %></b><br>
                  <% } %>
                </div>
                <input
                  type="submit"
                  name="dangky"
                  class="btn"
                  value="Đăng Ký"
                />
                <p class="social-text">
                  Hoặc Đăng Nhập Với Các Nền Tảng Xã Hội
                </p>
                <div class="social-media">
                  <a href="#" class="social-icon">
                    <i class="fab fa-facebook-f"></i>
                  </a>
                  <a href="#" class="social-icon">
                    <i class="fab fa-twitter"></i>
                  </a>
                  <a href="#" class="social-icon">
                    <i class="fab fa-google"></i>
                  </a>
                  <a href="#" class="social-icon">
                    <i class="fab fa-linkedin-in"></i>
                  </a>
                </div>
              </form>
            </div>
          </div>

          <div class="panels-container">
            <div class="panel left-panel">
              <div class="content">
                <h3>Đăng Ký Tại Đây</h3>
                <p>
                  Nếu bạn chưa có thông tin đăng nhập thì xin vui lòng, Click
                  vào đăng ký Xin cảm ơn!
                </p>
                <button class="btn transparent" id="sign-up-btn">
                  Đăng Ký
                </button>
              </div>
              <img src="login.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
              <div class="content">
                <h3>Đăng Nhập Tại Đây</h3>
                <p>
                  Nếu bạn đã có thông tin đăng nhập thì xin vui lòng, Click vào
                  đăng nhập Xin cảm ơn!
                </p>
                <button class="btn transparent" id="sign-in-btn">
                  Đăng Nhập
                </button>
              </div>
              <img src="reg.svg" class="image" alt="" />
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('layout/footer') %>

    <script>
      const sign_in_btn = document.querySelector("#sign-in-btn");
      const sign_up_btn = document.querySelector("#sign-up-btn");
      const container = document.querySelector(".container-login");

      sign_up_btn.addEventListener("click", () => {
        container.classList.add("sign-up-mode");
      });

      sign_in_btn.addEventListener("click", () => {
        container.classList.remove("sign-up-mode");
      });
    </script>
  </body>
</html>
